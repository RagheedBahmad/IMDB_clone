    #image-carousel {
        width: 50%;
        height: 35%;
        top: 0;
        left: 0;
        padding: 10px;
        margin-right: 0;
    }

    #image-track {
        display: flex;
        gap: 4vmin;
        position: absolute;
        left:25%;
        width:fit-content;
        transform: translate(0, -80%);
        user-select: none; /* -- Prevent image highlighting -- */
    }

    #image-track > .image {
        width: 20vmin;
        height: 50vmin;
        object-fit: cover;
        object-position: 100% center;
    }

   a > .image {
       min-width: 150px;
       width: 100%;
