<script>
    function displayInfo(event, slick, currentSlide) {
        let currentImage = slick.$slides.get(currentSlide).querySelector('img');
        let watchlistbtn = $(".watchListhover");
        let i = currentImage.getAttribute('data-id');
        $("#movie-title").text("#" + (i*1 + 1)  + " " + top10Movies[i].original_title)
        $("#movie-overview").text(top10Movies[i].overview)
        $("#movie-blur").attr("src", top10Movies[i].poster_path)
        watchlistbtn.attr("data-movie", top10Movies[i].id);
        if (typeof watchlist !== 'undefined' && watchlist.some(movie => movie.id === top10Movies[i].id)) {
            watchlistbtn.html("Remove from Watchlist")
            watchlistbtn.addClass("remove")
            watchlistbtn.removeClass("watch")
        } else {
            watchlistbtn.html("Add To Watchlist")
        }

    }

    function copy(id) {
        navigator.clipboard.writeText(`${window.location.origin}/movies/${id}`);
    }

    $(window).on("load", () => {
        console.log(watchlist)
        let movieInfo = $("#movie-info")
        let imageTrack = $(".image-track");
        let watchlistbtn = $(".watchListhover");
        $("#movie-title").text(`#1 ${top10Movies[0].original_title}`)
        $("#movie-overview").text(top10Movies[0].overview)
        $("#movie-blur").attr("src", top10Movies[0].poster_path)
        watchlistbtn.attr("data-movie", top10Movies[0].id)
        if (typeof watchlist !== 'undefined' && watchlist.some(movie => movie.id === top10Movies[0].id)) {
            watchlistbtn.html("Remove from Watchlist")
            watchlistbtn.addClass("remove")
            watchlistbtn.removeClass("watch")
        } else {
            watchlistbtn.html("Add To Watchlist")
        }
        movieInfo.addClass('slide-in-right');
        watchlistbtn.addClass('slide-in-right');
        imageTrack.on("beforeChange", function (event, slick, currentSlide) {
            movieInfo.removeClass('slide-in-right');
            watchlistbtn.removeClass('slide-in-right');
            watchlistbtn.addClass('slide-out-bck-center');
            movieInfo.addClass('slide-out-bck-center');
        });
        imageTrack.on('afterChange', function (event, slick, currentSlide) {
            movieInfo.removeClass('slide-out-bck-center');
            watchlistbtn.removeClass('slide-out-bck-center');
            displayInfo(event, slick, currentSlide)
            watchlistbtn.addClass('slide-in-right');
            movieInfo.addClass('slide-in-right');
        });
    })

</script>
