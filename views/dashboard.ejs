<style>
    html {
        scroll-behavior: smooth;
    }

    body {
        color: #7f9eb9;
        height: 100vh;
        width: 100vw;
        background-color: black;
        margin: 0;
        overflow-x: hidden;
    }

    h2 {
        font-size: 3vw;
    }

    a {
        text-decoration: none;
    }

    hr {
        width: 60%;
        margin: 20px auto;
        color: white;
    }

    .card {
        display: flex;
        width: 25%;
        background-color: #0a0a0a;
        z-index: 0;
        padding: 10px;
    }

    #head-container {
        width:100%;
        display:flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        min-height: 300px;
    }

    #image-carousel {
        width: 50%; /* Width of the visible area */
        height: 250px; /* Height of the visible area */
        overflow: hidden;
        margin-right: 0;
        transform: translate(20px, 10%);
    }

    .image-track {
        width:90%;
        margin: auto;
    }

    .image {
        /*width: 150px;*/
        width: 20vw;
        height: auto;
    }

    .watchlist-btn {
        position:absolute;
        background-color: gray;
        opacity: 0.7;
        border: none;
        z-index: 3;
        border-radius: 3px;
        transition: transform .3s cubic-bezier(.4,0,.2,1);
    }.watchlist-btn:hover {
        background-color: lightgray;
    }

    .slick-slide > a > img {
        width:100%;
        opacity: 0.75;
        transform: scale(.75);
        transition: transform .3s cubic-bezier(.4,0,.2,1);
    }

    .slick-center > a > img {
        width:100%;
        -moz-transform: scale(1.08);
        -ms-transform: scale(1.08);
        -o-transform: scale(1.08);
        -webkit-transform: scale(1.08);
        opacity: 1;
        transform: scale(1.08);
    }

    .watchListhover {
        background-color: transparent;
        border: none;
        position: relative;
        color: #7f9eb9;
        text-decoration: none;
        transition: color 0.3s ease;
        display: inline-block; /* Ensure proper alignment */
        padding: 5px; /* Add some padding */
    }

    .watchListhover:hover {
        -webkit-box-reflect: below 1px linear-gradient(transparent, #0005);
        transition: 0.3s ease-in;
    }


    .watchListhover::before {
        content: '';
        background: linear-gradient(to top, rgba(173, 216, 230, 0.10), rgba(173, 216, 230, 0));
        position: absolute;
        left: 0;
        bottom: 3px;
        width: 100%;
        height: 2px;

        transition: all .3s ease-in-out;
    }

    .watchListhover:hover::before {
        -webkit-box-reflect: below 1px linear-gradient(transparent, #0005);
        bottom: 0;
        height: 100%;
    }


    #movie-info {
        margin-left:20px;
        padding: 20px;
        max-width: 500px;
    }

    #watchlist-div {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #randomMovies {
        margin: 30px auto auto;
        padding-bottom: 50px;
        width: 80%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .card-style {
        display:flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: center;
    }

    .card-style > div {
        width: 15%;
        margin: 10px;
    }

    .card-style > div, #randomMovies > div {
        transition: transform 0.2s ease-in-out;
    }

    .card-style > div:hover, #randomMovies > div:hover {
        transform: scale(1.1);
    }


    .slide-out-left {
        -webkit-animation: slide-out-left 1s cubic-bezier(0.165, 0.840, 0.440, 1.000) both;
        animation: slide-out-left 1s cubic-bezier(0.165, 0.840, 0.440, 1.000) both;
    }
    .slide-in-right {
        -webkit-animation: slide-in-right 1s cubic-bezier(0.230, 1.000, 0.320, 1.000) both;
        animation: slide-in-right 1s cubic-bezier(0.230, 1.000, 0.320, 1.000) both;
    }
    .slide-out-bck-center {
        -webkit-animation: slide-out-bck-center 1s cubic-bezier(0.165, 0.840, 0.440, 1.000) both;
        animation: slide-out-bck-center 1s cubic-bezier(0.165, 0.840, 0.440, 1.000) both;
    }
    .scale-up-center {
        -webkit-animation: scale-up-center 0.4s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
        animation: scale-up-center 0.4s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
    }
    .scale-down-center {
        -webkit-animation: scale-down-center 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
        animation: scale-down-center 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
    }

    @-webkit-keyframes slide-out-left {
        0% {
            -webkit-transform: translateX(0);
            transform: translateX(0);
            opacity: 1;
        }
        100% {
            -webkit-transform: translateX(-50px);
            transform: translateX(-50px);
            opacity: 0;
        }
    }
    @keyframes slide-out-left {
        0% {
            -webkit-transform: translateX(0);
            transform: translateX(0);
            opacity: 1;
        }
        100% {
            -webkit-transform: translateX(-50px);
            transform: translateX(-50px);
            opacity: 0;
        }
    }
    @-webkit-keyframes slide-in-right {
        0% {
            -webkit-transform: translateX(50px);
            transform: translateX(50px);
            opacity: 0;
        }
        100% {
            -webkit-transform: translateX(0);
            transform: translateX(0);
            opacity: 1;
        }
    }
    @keyframes slide-in-right {
        0% {
            -webkit-transform: translateX(50px);
            transform: translateX(50px);
            opacity: 0;
        }
        100% {
            -webkit-transform: translateX(0);
            transform: translateX(0);
            opacity: 1;
        }
    }
    @-webkit-keyframes slide-out-bck-center {
        0% {
            -webkit-transform: translateZ(0);
            transform: translateZ(0);
            opacity: 1;
            scale: 1;
        }
        100% {
            -webkit-transform: translateZ(-1100px);
            transform: translateZ(-1100px);
            opacity: 0;
            scale: 0;
        }
    }
    @keyframes slide-out-bck-center {
        0% {
            -webkit-transform: translateZ(0);
            transform: translateZ(0);
            opacity: 1;
            scale: 1;
        }
        100% {
            -webkit-transform: translateZ(-1100px);
            transform: translateZ(-1100px);
            opacity: 0;
            scale: 0.5;
        }
    }
    @-webkit-keyframes scale-up-center {
        0% {
            -webkit-transform: scale(1);
            transform: scale(1);
        }
        100% {
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
        }
    }
    @keyframes scale-up-center {
        0% {
            -webkit-transform: scale(0.5);
            transform: scale(0.5);
        }
        100% {
            -webkit-transform: scale(1);
            transform: scale(1);
        }
    }
    @-webkit-keyframes scale-down-center {
        0% {
            -webkit-transform: scale(1);
            transform: scale(1);
        }
        100% {
            -webkit-transform: scale(0.9);
            transform: scale(0.9);
        }
    }
    @keyframes scale-down-center {
        0% {
            -webkit-transform: scale(1);
            transform: scale(1);
        }
        100% {
            -webkit-transform: scale(0.5);
            transform: scale(0.5);
        }
    }




    @media screen and (max-width: 1000px) {
        #head-container {
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
        }

        #image-carousel {
            width:70%;
            min-height:250px;
        }
        #movie-info {
            margin-top: 15px;
            width:90%;
        }

        .card-style {
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .card-style > div {
            flex-basis : calc(30% - 10px); /* Two cards per row, adjust for margin */
            margin: 20px;
        }
    }

    @media screen and (max-width: 640px) {
        body {
            font-size: unset;
        }

        p {
            font-size: unset;
        }

        span {
            font-size: 3vw;
        }

        h2 {
            font-size: 4vw;
        }

        #head-container {
            flex-direction: column;
            align-items: center;
            min-height: 400px;
        }

        .card-style {
            margin-top: 40px;
            flex-direction: column;
            justify-content: center;
        }

        .card-style > div {
            flex-basis: calc(70% - 10px); /* Two cards per row, adjust for margin */
            width: 65%;
            margin: auto auto 30px;
        }

        .card-style > div:hover, #randomMovies > div:hover {
            transform: scale(1.08);
        }

        #image-carousel {
            width:100%;
            min-height: unset;
            height: unset;
        }

        .image-track {
            width:60%;
        }

        #movie-info {
            width:90%;
        }

        #randomMovies {
            display:flex;
            flex-direction: column;
        }

        .card {
            width: 80%;
            margin: auto auto 20px;
        }
    }

</style>
