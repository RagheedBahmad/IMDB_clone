                    url: '/login',
                    type: 'POST',
                    data: formData,
                    success: function(res) {
                        window.location.href = "/dashboard/" + res.data.user.username;
                    },
                    error: function(err) {
                        // Handle error
                        // Display the error message from the response on your HTML page
                        $('#error-message').text(err.message);
                    }
                });
            })
            animate();
        }

        function signup() {
            $('html, body').animate({ scrollTop: 200 }, 1500);
            $("#template").empty().append(signupForm);
            $("#signupCred").on("submit", function(event) {
                event.preventDefault();
                const formData = $(this).serialize();
                $.ajax({
                    url: '/signup',
                    type: 'POST',
                    data: formData,
                    success: function(res) {
                        window.location.href = "dashboard/" + res.data.user.username;
                    },
                    error: function(response) {
                        // Handle error
                        // Display the error message from the response on your HTML page
                        $("#error-message").text(response.responseJSON.message);
                    }
                });
            })
            animate();
        }

        function forgotPassword() {
            $("#template").empty().append(forgotPasswordForm);
