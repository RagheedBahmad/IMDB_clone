            $("#facebook-auth").removeClass("slide-out-bottom").addClass("slide-in-bottom")
            $("#breaker").removeClass("slide-out-bottom").addClass("slide-in-bottom")
            $("#login").removeClass("slide-out-left").addClass("slide-in-left")
            $("#signup").removeClass("slide-out-right").addClass("slide-in-right")
            $("#template").removeClass("slide-in-top").addClass("slide-out-top").addClass("hidden")
        }
