            // Send the ID token to your server with a fetch request
            $.ajax({
                url: '/auth/google',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ token: response.credential }),
                success: function(res) {
                    window.location.href = "/dashboard/" + res.data.user.username
                },
                error: function(xhr) {
                    let error = $("#error-message")
                    error.text(xhr.responseJSON.message)
                    error.fadeIn();
                    setTimeout(function() {
                        error.fadeOut();
                    }, 6000);
                }
            });
            setTimeout(function(){
                $(window).scrollTop(0);
            }, 400);
        }

        function checkResponseStatus(response) {
            if (!response.ok) $('#error-message').text(response.message);
        }

        const rmCheck = $("#rememberMe")
        const email = $("#email")
        if (localStorage.checkbox && localStorage.checkbox !== "") {
            rmCheck.prop('checked', true);
            email.val(localStorage.username);
